{
    "manifest_version": 2,
    "name": "Intention",
    "description": "Focus Intentionally",
    "version": "1.0.0",
    "icons": {"128": "images/Logo_128px.png"},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_icon": "images/Logo_19px.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "tabs", "declarativeContent", "storage"]
}